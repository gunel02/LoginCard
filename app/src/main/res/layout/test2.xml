<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fab_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="horizontal"
    android:padding="24dp">

    <com.example.logincard.widgets.RippleFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/change_questions_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/bright_blue"
            app:cardCornerRadius="30dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/icon_person_add"
                app:tint="@color/neutral_100" />
        </com.google.android.material.card.MaterialCardView>

    </com.example.logincard.widgets.RippleFrameLayout>
</LinearLayout>

