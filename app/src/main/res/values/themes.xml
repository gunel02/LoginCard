<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Base.Theme.LoginCard" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/neutral_100</item>
        <item name="android:navigationBarColor">@color/neutral_100</item>
        <item name="android:statusBarColor">@color/neutral_100</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/work_sans_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <style name="Theme.LoginCard" parent="Base.Theme.LoginCard" />


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>


    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="CalendarDateStyle" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/date_color</item>
    </style>

    <style name="CalendarWeekDayStyle" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/universal_gray</item>
    </style>

</resources>


